{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [
                120
            ]
        },
        "new-parens": true,
        "no-arg": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "quotemark": [
            true,
            "single",
            "jsx-double"
        ]
    },
    "jsRules": {
        "max-line-length": {
            "options": [
                120
            ]
        }
    },
    "linterOptions": {
        "exclude": [
            "lib",
            "node_modules",
            "e2e/build",
            "example/build"
        ]
    }
}